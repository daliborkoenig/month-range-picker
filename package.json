{
  "name": "month-range-picker",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite --mode development",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "clean": "rimraf ./dist",
    "clean-build": "run-s clean build",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint \"**/*{.js,.tsx,.ts}\" --fix",
    "lint:stylelint-ts": "stylelint \"**/*.{ts,tsx}\" --fix",
    "prettify:write": "prettier --write \"./**/*/*.{ts,tsx,js,jsx,json,yml,css,md,graphql}\"",
    "prettify:check": "prettier --check \"./**/*/*.{ts,tsx,js,jsx,json,yml,css,md,graphql}\"",
    "ci-cd": "run-s prettify:write lint:*",
    "preview": "vite preview",
    "prepare": "simple-git-hooks",
    "node-reset": "rm -rf node_modules && rm -rf package-lock.json && npm cache clean --force && npm install"
  },
  "dependencies": {
    "@types/lodash": "^4.17.20",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.46",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.4.0",
    "styled-components": "^6.1.13",
    "use-immer": "^0.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^9.33.0",
    "eslint-plugin-import-path": "^0.0.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "polished": "^4.3.1",
    "postcss-styled-syntax": "^0.7.0",
    "prettier": "^3.4.1",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "36.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^6.3.5",
    "vite-plugin-moment-timezone": "^0.0.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,css,md,graphql}": [
      "prettier --write"
    ]
  }
}
